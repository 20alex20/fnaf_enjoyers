{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/main/posts": {
            "get": {
                "description": "Gets posts on the main page",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "main"
                ],
                "summary": "Main page posts",
                "parameters": [
                    {
                        "type": "string",
                        "example": "all",
                        "description": "post category",
                        "name": "category",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "example": "without",
                        "description": "post filter",
                        "name": "filter",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "example": "date_time",
                        "description": "sort type",
                        "name": "sort",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "example": 2,
                        "description": "total number of posts to get",
                        "name": "number",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "example": 1,
                        "description": "page number",
                        "name": "page",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/model.PostMain"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/user-post": {
            "get": {
                "summary": "Return all user posts",
                "parameters": [
                    {
                        "type": "string",
                        "description": "user id",
                        "name": "user_id",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {}
            }
        }
    },
    "definitions": {
        "model.PostMain": {
            "type": "object",
            "properties": {
                "date_time": {
                    "type": "string",
                    "example": "2023.07.20 12:00"
                },
                "likes": {
                    "type": "integer",
                    "example": 50
                },
                "text": {
                    "type": "string",
                    "example": "Lorem ipsum"
                },
                "views": {
                    "type": "integer",
                    "example": 100
                }
            }
        }
    }
}